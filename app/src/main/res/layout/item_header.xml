<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/divider_s"
    android:layout_marginTop="@dimen/divider_s"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/divider_xl"
        android:textColor="@color/translucent_black_m"
        android:textSize="@dimen/text_s"
        tools:text="Избранное" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_start_item_main_content"
        android:background="@color/translucent_black_xs" />

</FrameLayout>